<UserControl x:Class="InvvardDev.EZLayoutDisplay.Plugin.ErgoDoxEz.View.ErgoDoxEzView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InvvardDev.EZLayoutDisplay.Plugin.ErgoDoxEz.View"
             xmlns:vm="clr-namespace:InvvardDev.EZLayoutDisplay.Plugin.ErgoDoxEz.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance vm:ErgoDoxEzViewModel}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/InvvardDev.EZLayoutDisplay.Plugin.CommonZsa;component/Skins/ZsaCommonSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

        <ItemsControl ItemsSource="{Binding}" Focusable="False"
                      ItemTemplateSelector="{StaticResource KeyContentTemplateSelector}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas Margin="10" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
</UserControl>
